{
  "name": "dev-tools",
  "private": true,
  "description": "A collection of development tools to enhance code quality and streamline development workflows at FMSS",
  "license": "MIT",
  "author": "GÃ¼rkan Sevil",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate": "plop",
    "generate:package": "npx plop package && npx plop docs",
    "lint": "turbo lint",
    "prepare": "husky",
    "release": "changeset publish",
    "sort-package-json-files": "sort-package-json \"**/package.json\" --ignore \"**/node_modules/**\""
  },
  "lint-staged": {
    "*": "prettier -w --ignore-unknown",
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@fmss/commitlint-config": "workspace:*",
    "eslint": "^9.19.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "plop": "^4.0.1",
    "prettier": "^3.4.2",
    "sort-package-json": "^2.14.0",
    "turbo": "^2.3.4",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
